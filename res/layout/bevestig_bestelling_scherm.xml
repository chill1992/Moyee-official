<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/optielayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeddff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#333333"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Bevestig bestelling"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioGroup
                android:id="@+id/kleurGroep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

            </RadioGroup>

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/bevestig_bestelling_knop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="bestel"
        android:text="Bevestig bestelling" />

    <Button
        android:id="@+id/annuleer_bestelling_knop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="naarInvoerScherm"
        android:text="Annuleer bestelling" />

</LinearLayout>